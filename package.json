{
  "name": "sample-node-app",
  "version": "1.0.0",
  "description": "Sample Node App",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run serve",
    "reinstall": "rimraf node_modules && npm cache clean && npm install",
