    "@types/express": "^4.17.6",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "copyfiles": "^2.2.0",
    "rimraf": "^3.0.2"
  }
